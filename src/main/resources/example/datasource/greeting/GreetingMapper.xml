<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="example.datasource.greeting.GreetingMapper">

    <resultMap id="greeting" type="example.model.greeting.Greeting">
        <id property="id" column="id"/>
        <result property="greetTo" column="name"/>
    </resultMap>

    <select id="list" resultMap="greeting">
        SELECT id, name
        FROM greeting.requests
        ORDER BY id;
    </select>


    <insert id="register">
        INSERT INTO greeting.requests (
          id, name
        )
        VALUES (
        #{greeting.id},#{greeting.greetTo}
        );
    </insert>

</mapper>